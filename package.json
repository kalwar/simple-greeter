{
  "name": "simple-greeter",
  "version": "1.0.0",
  "description": "a simple greeter",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
   "prepublishOnly": "npm test && npm run lint",
   "preversion": "npm run lint",
   "version": "npm run format && git add -A src",
   "postversion": "git push && git push --tags",
    "codecov": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kalwar/simple-greeter.git"
  },
  "keywords": ["Greeter", "Welcome", "typescript", "Jest"],
  "author": "SK",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kalwar/simple-greeter/issues"
  },
  "homepage": "https://github.com/kalwar/simple-greeter#readme",
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "jest": "^23.1.0",
    "prettier": "^1.13.5",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  }
}
